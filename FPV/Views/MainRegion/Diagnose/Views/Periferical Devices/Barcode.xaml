<vw:View
    x:Class="HMI.User.Barcode"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:vw="http://inosoft.com/visiwin7"
	Width="500" MinHeight="200" Background="{StaticResource MainViewBackgroundBrush}">

    <Grid x:Name="LayoutRoot" >
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <vw:TextVarOut x:Name="status" Height="40" Width="320" Background="LightGray" VariableName="__UNLINKED_BSTR" LabelText="Status" />
        <vw:Button x:Name="openConnection" Grid.Row="1" Height="40" Width="160" Style="{DynamicResource FP_GrayButton}" Text="Open Connection"  Click="OpenConnection_Click" AuthorizationRight="DeviceManagement" LocalizableText="@Admin.Text1"/>
        <vw:Button x:Name="closeConnection" Grid.Row="2"  Height="40" Width="160" Style="{DynamicResource FP_GrayButton}" Text="Close Connection"  Click="CloseConnection_Click" AuthorizationRight="DeviceManagement" LocalizableText="@Admin.Text2"/>
        <vw:Button x:Name="CheckConnection" Grid.Row="3"  Height="40" Width="160" Style="{DynamicResource FP_GrayButton}" Text="Check Barcode Status" Click="CheckConnection_Click" AuthorizationRight="DeviceManagement" LocalizableText="@Admin.Text7"/>
    </Grid>

</vw:View>