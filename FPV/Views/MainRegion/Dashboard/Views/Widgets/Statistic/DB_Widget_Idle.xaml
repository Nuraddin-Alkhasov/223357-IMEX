<vw:View x:Class="HMI.Dashboard.DB_Widget_Idle"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:vw="http://inosoft.com/visiwin7"
		 Width="585" Height="225" >

	<Grid x:Name="LayoutRoot">
        <Border CornerRadius="5" Background="{DynamicResource FP_Dark}"/>
        <vw:TextBlock TextAlignment="Left" Padding="10, 6, 0, 0" Height="35" VerticalAlignment="Top" Foreground="White" FontSize="18" LocalizableText="@Dashboard.Text36"  />


        <vw:TextVarOut Name="tbTime" BorderThickness="3" Background="Transparent" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="40" FontWeight="Bold" Foreground="White"  Width="400" Height="100" HorizontalContentAlignment="Center" AuthorizationRight="Dashboard" Margin="0,70,0,0"/>
        <vw:Button x:Name="Enable" Background="Transparent" IsEnabled="False" Visibility="Collapsed"/>


    </Grid>

</vw:View>