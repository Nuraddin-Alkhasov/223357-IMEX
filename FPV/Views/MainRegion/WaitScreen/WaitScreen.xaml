<vw:View
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vw="http://inosoft.com/visiwin7"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        x:Class="HMI.Views.MainRegion.WaitScreen"
        Width="1920" Height="1080" Background="Transparent" IsVisibleChanged="View_IsVisibleChanged">

    <Grid  Background="{DynamicResource DialogSurroundBrush}">
        <Border Width="460" Height="300" CornerRadius="5" Background="{DynamicResource FP_Dark}" BorderThickness="1" BorderBrush="Black">
            <Border.Effect>
                <DropShadowEffect Color="{DynamicResource ShadowDarkBottomColor}" />
            </Border.Effect>
        </Border>
        <Image  gif:ImageBehavior.AnimatedSource="D:\ForplanVisualization\Images\Loading.gif" Stretch="None"/>
        <vw:TextBlock x:Name="TextBlockText" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="740,659,0,0" FontSize="16" FontWeight="Bold"/>

        <vw:TextBlock x:Name="countDown" Foreground="White" TextAlignment="Center" TextWrapping="Wrap" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,390,740,0" FontSize="30" FontWeight="Bold"/>
    </Grid>
</vw:View>