<vw:View x:Class="HMI.Handmenu.Out.H_Out_Tor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vw="http://inosoft.com/visiwin7"
    Width="1840" Height="890"  Background="{DynamicResource MainViewBackgroundBrush}">

    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Width="1500" Height="250" HorizontalAlignment="Center" VerticalAlignment="Center">
            <vw:TextBlock Margin="0,-100,0,0" LocalizableText="@HandMenu.Text38" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <vw:TextVarOut Height="40" VerticalAlignment="Center" Margin="420,0,420,0" HorizontalContentAlignment="Center" Value="{vw:VariableBinding VariableName=IMEX.PLC.Blocks.21 Aus- Einschleussen.Aus.DB Ausschleusen HMI.Actual value.Rolltor Entnahme Textliste, Converter={StaticResource ValueToStateTextConverter}, States={StaticResource Tür}, StateMode=Value}"/>
            <vw:Key Width="160" Height="80" HorizontalAlignment="Left" VerticalAlignment="Center" LocalizableText="@Tasten.Schließen" Style="{DynamicResource FP_BlueButton}" KeyMode="KeyMode" AuthorizationRight="ManualDrive" VariableName="IMEX.PLC.Blocks.21 Aus- Einschleussen.Aus.DB Ausschleusen HMI.PC.Rolltor Entnahme.schließen"/>
            <vw:Key Width="160" Height="80" HorizontalAlignment="Right" VerticalAlignment="Center" Style="{DynamicResource FP_BlueButton}" KeyMode="KeyMode" LocalizableText="@Tasten.öffnen" AuthorizationRight="ManualDrive" VariableName="IMEX.PLC.Blocks.21 Aus- Einschleussen.Aus.DB Ausschleusen HMI.PC.Rolltor Entnahme.öffnen" />
        </Grid>
        <Grid Grid.Row="1" Width="1500" Height="250" HorizontalAlignment="Center" VerticalAlignment="Center">
            <vw:TextBlock Margin="0,-100,0,0" LocalizableText="@HandMenu.Text32" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <vw:TextVarOut Height="40" VerticalAlignment="Center" Margin="420,0,420,0" HorizontalContentAlignment="Center" Value="{vw:VariableBinding VariableName=IMEX.PLC.Blocks.21 Aus- Einschleussen.Aus.DB Ausschleusen HMI.Actual value.Rolltor Schleusse Textliste, Converter={StaticResource ValueToStateTextConverter}, States={StaticResource Tür}, StateMode=Value}"/>
            <vw:Key Width="160" Height="80" HorizontalAlignment="Left" VerticalAlignment="Center" LocalizableText="@Tasten.Schließen" Style="{DynamicResource FP_BlueButton}" KeyMode="KeyMode" AuthorizationRight="ManualDrive" VariableName="IMEX.PLC.Blocks.21 Aus- Einschleussen.Aus.DB Ausschleusen HMI.PC.Rolltor Schleusse.schließen"/>
            <vw:Key Width="160" Height="80" HorizontalAlignment="Right" VerticalAlignment="Center" Style="{DynamicResource FP_BlueButton}" KeyMode="KeyMode" LocalizableText="@Tasten.öffnen" AuthorizationRight="ManualDrive" VariableName="IMEX.PLC.Blocks.21 Aus- Einschleussen.Aus.DB Ausschleusen HMI.PC.Rolltor Schleusse.öffnen" />
        </Grid>
    </Grid>
</vw:View>